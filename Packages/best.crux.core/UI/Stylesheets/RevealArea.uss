RevealArea.revealed {
    display: flex;
}

RevealArea.unrevealed {
    display: none;
}

RevealArea, EnumRevealArea
{
    background-color: rgba(255, 255, 255, 0.05);
    padding: 4px 4px 4px 8px;
    margin-top: 4px;
    margin-bottom: 4px;
    border-radius: 4px;
}

RevealArea > .unity-base-field__input
{
    display: none;
}